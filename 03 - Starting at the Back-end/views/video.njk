{% extends "layout.njk" %}

{% block head %}
    <title>{{items.title}}</title>
{% endblock %}

{% block content %}
    <div id="wrapper" class="video">
        <h1>{{items.title}}</h1>
    </div>

    <section class="video">
        <div class="card" id="{{items.id}}">
            <div class="card-video-container">
                <iframe src="https://www.youtube.com/embed/{{items.id}}" frameborder="0"></iframe>                
            </div>
            <div class="card-content">
                <p>{{items.title}}</p>
            </div>
            <div class="card-info">
                <p>{{items.duration}}</p>
                <p class="card-price">{{items.price}}</p>
            </div>
        </div>
    </section>
{% endblock %}