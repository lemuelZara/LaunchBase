{% extends "layout.njk" %}

{% block head %}
    <title>Teacher | Register</title>
{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/teacher">
        <section class="avatar"></section>
        <section class="details">
            <div class="item">
                <div>URL do Avatar</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>
            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Informe seu nome">
                </div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>
                    <input type="date" name="birth" placeholder="Informe sua idade">
                </div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="schooling">
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Mestrado">Mestrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <label>Presencial
                        <input type="radio" checked="checked" name="type_class" value="Presencial">
                    </label>
                    <label>À distância
                        <input type="radio" checked="checked" name="type_class" value="À distância">
                    </label>
                </div>
            </div>
            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="occupation" placeholder="Matemática, Física, ...">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}