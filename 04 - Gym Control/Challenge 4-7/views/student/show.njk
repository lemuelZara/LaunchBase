{% extends "layout.njk" %}

{% block head %}
    <title>{{ student.name }}</title>
{% endblock head %}

{% block content %}
    <form class="card">
        <section class="avatar"></section>
        <section class="details">
            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Ano Escolar</div>
                <div>{{ student.year_school }}</div>
            </div>
            <div class="item">
                <div>Carga horÃ¡ria semanal</div>
                <div>{{ student.hours }}</div>
            </div>

            <a href="/student/{{ student.id }}/edit" class="button">Editar</a>
        </section>
    </div>
    <script type="text/javascript">
        const avatar = document.querySelector('.avatar')
        const avatar_url = {{ student.avatar_url | dump | safe }}

        avatar.style.background = `url(${avatar_url}) no-repeat center center / cover`
    </script>
{% endblock content %}