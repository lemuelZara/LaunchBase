{% extends "layout.njk" %}

{% block head %}
    <title>{{ teacher.name }}</title>
{% endblock head %}

{% block content %}
    <form class="card" method="POST" action="/teacher">
        <section class="avatar"></section>
        <section class="details">
            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.birth }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.schooling }}</div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ teacher.type_class }}</div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                {% for occupation in teacher.occupation %}
                    <span>{{ occupation }}</span>
                {% endfor %}
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="/teacher/{{ teacher.id }}/edit" class="button">Editar</a>
        </section>
    </form>
    <script type="text/javascript">
        const avatar = document.querySelector('.avatar')
        const avatar_url = {{ teacher.avatar_url | dump | safe }}

        avatar.style.background = `url(${avatar_url}) no-repeat center center / cover`
    </script>
{% endblock content %}