{% extends "layout.njk" %}

{% block head %}
    <title>Teacher</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <h3>Professores</h3>
        <table>
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>{{teacher.occupation}}</td>
                        <td>
                            <a href="/teacher/{{teacher.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}